                                                                    (Scale
                                                                        (9%10)
                                                                        (Constant 1)
                                                                    )
                                                                    (ChoiceValue
                                                                        (ChoiceId
                                                                            "Bounty Amount"
                                                                            (Role "Bounty Maker")
                                                                        ))
                                                                )
